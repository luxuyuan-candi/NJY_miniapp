/* pages/yangsheng/aidentify/task/taskB/index.wxss */
page, .page {
  width: 100vw;
  height: 100vh;
  margin: 0;
  padding: 0;
  background: #000;
  position: relative;
  overflow: hidden;
}

/* 摄像头充满页面 */
.camera {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 中间提示图片 */
.capture-guide {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60%;
  z-index: 2;
  opacity: 0.7; /* 可以调整透明度突出摄像头 */
}

/* 拍照按钮固定底部 */
.camera-btn {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: red;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.btn-text {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}




