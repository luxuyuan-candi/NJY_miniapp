/* pages/maosha/index.wxss */
.container {
  padding-bottom: 120rpx; /* 留出按钮空间 */
}
.header {
  padding: 20rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.divider {
  margin-top: 10rpx;
  height: 4rpx;
  background-color: #ccc;
  width: 60%;
  margin-left: auto;
  margin-right: auto;
  border-radius: 2rpx;
}

.product-card {
  margin: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  background-color: #fff;
}
.product-image {
  width: 100%;
  aspect-ratio: 16 / 9;
  border-radius: 8rpx;
  object-fit: cover;
}
.product-info text {
  display: block;
  margin: 6rpx 0;
}
.add-btn {
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #007aff;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
}

.status-pending {
  color: #000; /* 字体颜色可调 */
  background-color: yellow;
  padding: 2px 4px;
  border-radius: 4px;
}

.status-approve {
  color: #fff;
  background-color: green;
  padding: 2px 4px;
  border-radius: 4px;
}

.list {
  flex-grow: 1;
  margin-top: 20rpx;
  overflow-y: scroll;
}