/* pages/yangsheng/aidentify/task/taskB/index.wxss */
page, .page {
  width: 100vw;
  height: 100vh;
  margin: 0;
  padding: 0;
  background: #0d0b09;
  position: relative;
  overflow: hidden;
}

.camera {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.overlay {
  position: absolute;
  top: 40rpx;
  left: 24rpx;
  right: 24rpx;
  padding: 18rpx 20rpx;
  border-radius: 16rpx;
  background: rgba(20, 14, 8, 0.55);
  color: #f7e6c7;
  z-index: 3;
}

.overlay-title {
  font-size: 30rpx;
  font-weight: 700;
}

.overlay-subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #e7d7ba;
}

.capture-guide {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 62%;
  z-index: 2;
  opacity: 0.7;
}

.camera-btn {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #d2872f, #b86c21);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
  box-shadow: 0 16rpx 30rpx rgba(140, 88, 24, 0.35);
}

.btn-text {
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
}
