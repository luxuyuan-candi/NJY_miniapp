/* pages/yaozha_summary/index.wxss */
.container {
  padding: 20rpx;
}
.item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.row {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.header {
  text-align: center;
  margin: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.divider {
  margin: 10rpx auto;
  width: 60%;
  height: 4rpx;
  background-color: #ccc;
  border-radius: 2rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
  padding: 10rpx 0;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  color: #666;
}

.filter-item.active {
  color: #ffffff;
  background-color: #007aff;
  border-radius: 8rpx;
}
