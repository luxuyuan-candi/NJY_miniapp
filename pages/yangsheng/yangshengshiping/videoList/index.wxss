/* pages/yangsheng/yangshengshiping/videoList/index.wxss */
.page {
  background: #f7f1e6;
  min-height: 100vh;
  padding-top: 88rpx;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: #fff7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(153, 101, 38, 0.12);
  z-index: 100;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #5c3b16;
}

.content {
  padding: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #5a3a16;
  margin-bottom: 16rpx;
}

.video-list {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.video-card {
  display: flex;
  background: #ffffff;
  border-radius: 18rpx;
  overflow: hidden;
  border: 1rpx solid #f1e3cc;
  box-shadow: 0 8rpx 18rpx rgba(85, 56, 18, 0.12);
}

.cover {
  width: 220rpx;
  height: 150rpx;
  background: #f0e6d8;
}

.info {
  flex: 1;
  padding: 16rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 700;
  color: #3f2a11;
}

.desc {
  font-size: 24rpx;
  color: #7b6a56;
  margin-top: 8rpx;
  line-height: 1.5;
}
