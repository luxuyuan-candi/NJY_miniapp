.page {
  background: #f5f5f5;
  height: 100vh;
  padding-top: 88rpx; /* 顶部导航栏高度 */
  position: relative;
}

/* 顶部导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.back-btn {
  position: absolute;
  left: 24rpx;
  font-size: 36rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 商品列表 */
.content {
  padding: 16rpx;
  padding-bottom: 120rpx; /* 底部结算栏 */
}

/* 商品卡片 */
.cart-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.cart-img {
  width: 140rpx;
  height: 140rpx;
}

.cart-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.cart-brief {
  font-size: 24rpx;
  color: #666;
  margin: 8rpx 0;
}

.cart-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.price {
  font-size: 28rpx;
  font-weight: bold;
  color: #e64340;
}

.subtotal {
  font-size: 24rpx;
  color: #666;
}

/* 加减按钮 */
.count {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.btn {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin: 0 4rpx;
}

.num {
  width: 60rpx;
  text-align: center;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16rpx;
  box-shadow: 0 -2rpx 5rpx rgba(0,0,0,0.05);
}

/* 左侧操作区域 */
.left-actions {
  display: flex;
  align-items: center;
}

/* 清空按钮 */
.clear-btn {
  background: #fff;
  border: 1rpx solid #ddd;
  color: #333;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

.total {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
  margin-left: 8rpx;
}

.checkout-btn {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
}

