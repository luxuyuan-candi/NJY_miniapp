/* pages/yangsheng/yangshengshiping/index.wxss */
.page {
  background: #f7f1e6;
  min-height: 100vh;
  padding-top: 88rpx;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: #fff7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(153, 101, 38, 0.12);
  z-index: 100;
}

.menu-btn {
  position: absolute;
  left: 24rpx;
  font-size: 36rpx;
  color: #7b4f21;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #5c3b16;
  letter-spacing: 2rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(45, 30, 10, 0.45);
  z-index: 99;
}

.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  width: 72%;
  height: 100%;
  background: #fffaf2;
  transform: translateX(-100%);
  transition: transform 0.3s;
  z-index: 100;
  padding-top: 88rpx;
  box-shadow: 12rpx 0 28rpx rgba(92, 58, 20, 0.18);
}

.sidebar.open {
  transform: translateX(0);
}

.sidebar-header {
  padding: 28rpx 32rpx 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #8a5a2b;
}

.sidebar .item {
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f1e1c8;
  font-size: 28rpx;
  color: #5f4525;
}

.content {
  padding: 20rpx;
}

.hero {
  padding: 28rpx 24rpx;
  border-radius: 22rpx;
  background: linear-gradient(135deg, #f4d7ab, #fff2d9);
  box-shadow: 0 10rpx 22rpx rgba(168, 112, 38, 0.18);
  margin-bottom: 22rpx;
}

.hero-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #5a3a16;
}

.hero-subtitle {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #7d5a2c;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.grid-item {
  position: relative;
  width: 100%;
  height: 240rpx;
  border-radius: 18rpx;
  overflow: hidden;
  background-color: #f2f2f2;
  box-shadow: 0 8rpx 18rpx rgba(85, 56, 18, 0.12);
}

.grid-item image {
  width: 100%;
  height: 100%;
}

.grid-text {
  position: absolute;
  left: 20rpx;
  bottom: 16rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  padding: 10rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.35);
}

.grid-item-hover {
  transform: scale(0.97);
  opacity: 0.9;
}
