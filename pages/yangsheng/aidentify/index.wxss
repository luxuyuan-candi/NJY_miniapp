/* 页面根容器，禁止滚动 */
page {
  height: 100%;
  overflow: hidden;
}

.content-layer {
  position: fixed;
  left: 0;
  top: 0;

  width: 100vw;
  height: 100vh;

  display: flex;
  justify-content: center;
  align-items: center;

  pointer-events: none; /* 关键 */
}

/* 让按钮本身可点击 */
.circle-btn {
  pointer-events: auto;

  width: 380rpx;
  height: 380rpx;
  border-radius: 50%;

  background: linear-gradient(
    270deg,
    #ff6b6b,
    #feca57,
    #1dd1a1,
    #54a0ff,
    #5f27cd
  );
  background-size: 1000% 1000%;
  animation: gradientMove 6s ease infinite;

  display: flex;
  justify-content: center;
  align-items: center;

  box-shadow: 0 30rpx 60rpx rgba(0, 0, 0, 0.25);
}

.circle-btn:active {
  transform: scale(0.95);
}

.circle-text {
  color: #fff;
  font-size: 42rpx;
  font-weight: 600;
}

@keyframes gradientMove {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

