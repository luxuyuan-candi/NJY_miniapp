/* pages/yangsheng/aidentify/task/index.wxss */
page {
  background: #f7f7f7;
}

.page {
  padding: 40rpx;
}

/* 标题 */
.title {
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 任务卡片 */
.task-card {
  position: relative;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
}

.task-title {
  font-size: 34rpx;
  font-weight: 600;
}

.task-desc {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #888;
}

/* 右下角勾 */
.check {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #1dd1a1;
  color: #fff;
  font-size: 30rpx;

  display: flex;
  align-items: center;
  justify-content: center;
}

/* 查看结果按钮 */
.result-btn {
  position: fixed;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);

  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;

  background: linear-gradient(
    270deg,
    #ff9f43,
    #1dd1a1,
    #54a0ff
  );
  background-size: 800% 800%;
  animation: gradientMove 6s ease infinite;

  color: #fff;
  font-size: 34rpx;
  font-weight: 600;

  display: flex;
  align-items: center;
  justify-content: center;

  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.25);
}

@keyframes gradientMove {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* 重新测试按钮 */
/* 任务列表下方重新测试按钮 */
.reset-btn {
  margin-top: 40rpx; /* 与任务卡片间距 */
  height: 80rpx;
  background: #ff6b6b;
  border-radius: 40rpx;

  color: #fff;
  font-size: 28rpx;
  font-weight: 600;

  display: flex;
  align-items: center;
  justify-content: center;

  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.2);
}