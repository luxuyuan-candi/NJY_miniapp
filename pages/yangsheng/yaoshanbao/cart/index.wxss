/* pages/yangsheng/yaoshanbao/cart/index.wxss */
.page {
  background: #f7f1e6;
  min-height: 100vh;
  padding-top: 88rpx;
  position: relative;
}

/* 顶部导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: #fff7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(153, 101, 38, 0.12);
  z-index: 100;
}

.back-btn {
  position: absolute;
  left: 24rpx;
  font-size: 36rpx;
  color: #7b4f21;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #5c3b16;
}

/* 商品列表 */
.content {
  padding: 16rpx 20rpx 160rpx;
}

.cart-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  border: 1rpx solid #f1e3cc;
  box-shadow: 0 8rpx 18rpx rgba(85, 56, 18, 0.12);
}

.cart-img {
  width: 160rpx;
  height: 160rpx;
}

.cart-info {
  flex: 1;
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #3f2a11;
}

.cart-brief {
  font-size: 24rpx;
  color: #7b6a56;
  margin: 8rpx 0;
}

.cart-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 10rpx;
}

.price {
  font-size: 28rpx;
  font-weight: 700;
  color: #c0572a;
}

.subtotal {
  font-size: 24rpx;
  color: #7b6a56;
}

/* 加减按钮 */
.count {
  display: flex;
  align-items: center;
  background: #f7eddc;
  border-radius: 999rpx;
  padding: 4rpx 8rpx;
}

.btn {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 30rpx;
  color: #6b4a1f;
  background: #fff;
  margin: 0 6rpx;
}

.num {
  width: 56rpx;
  text-align: center;
  color: #5f4525;
  font-weight: 600;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 -8rpx 20rpx rgba(120, 78, 24, 0.12);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

.left-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.clear-btn {
  background: #fff6e6;
  border: 1rpx solid #e6cfa8;
  color: #7b4f21;
  font-size: 24rpx;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
}

.total {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.total-label {
  font-size: 26rpx;
  color: #5f4525;
}

.total-price {
  font-size: 34rpx;
  color: #c0572a;
  font-weight: 700;
}

.checkout-btn {
  background: linear-gradient(135deg, #d2872f, #b86c21);
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 30rpx;
  border-radius: 999rpx;
  box-shadow: 0 10rpx 20rpx rgba(140, 88, 24, 0.25);
}
