/* pages/yangsheng/aidentify/task/result/index.wxss */
page {
  background: #f6f2ea;
  color: #2b2a27;
}

.page {
  padding: 32rpx 28rpx 60rpx;
}

.header {
  padding: 28rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #f4e2c3, #f9f3e7);
  box-shadow: 0 10rpx 30rpx rgba(120, 92, 35, 0.12);
  margin-bottom: 24rpx;
}

.title {
  font-size: 38rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.subtitle {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #6f634f;
}

.result-card {
  padding: 28rpx;
  border-radius: 24rpx;
  background: #ffffff;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(79, 61, 27, 0.08);
}

.result-type {
  font-size: 36rpx;
  font-weight: 700;
  color: #8b5e1a;
}

.result-score {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #7a6a55;
}

.result-summary {
  margin-top: 16rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: #4f463a;
}

.traits {
  margin-top: 20rpx;
}

.traits-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.traits-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.trait {
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: #f3eadb;
  color: #6a5532;
  font-size: 24rpx;
}

.score-card {
  padding: 24rpx;
  border-radius: 20rpx;
  background: #fff8ee;
  border: 2rpx solid #ecd7b4;
  margin-bottom: 32rpx;
}

.score-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #8b5e1a;
  margin-bottom: 16rpx;
}

.score-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.score-item {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #5c5344;
}

.primary-btn {
  height: 92rpx;
  border-radius: 46rpx;
  background: #b57b23;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}
