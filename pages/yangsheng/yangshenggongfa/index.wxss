/* pages/yangsheng/index/index.wxss */
.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  width: 70%;
  height: 100%;
  background: #ffffff;
  z-index: 1000;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.sidebar.open {
  transform: translateX(0);
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
}

.item {
  padding: 32rpx;
  border-bottom: 1px solid #eee;
}

.page {
  padding: 32rpx;
}

.nav-bar {
  position: relative;
  height: 88rpx;
  background-color: #f5f5f5; /* 背景色 */
  display: flex;
  align-items: center;
}

.menu-btn {
  position: absolute;
  left: 24rpx;
  font-size: 40rpx;
  line-height: 1;
}

/* 中间标题 */
.nav-title {
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
}

.content {
  padding: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

/* 列表 */
.video-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 单个卡片 */
.video-card {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 封面 */
.cover {
  width: 220rpx;
  height: 140rpx;
  background: #f0f0f0;
}

/* 文本信息 */
.info {
  flex: 1;
  padding: 16rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 600;
}

.desc {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}
