<!-- pages/yangsheng/aidentify/task/index.wxml -->
<view class="page">
  <view class="header">
    <view class="title">体质检测</view>
    <view class="subtitle">完成任务后可查看体质结果</view>
  </view>

  <view class="task-list">
    <view class="task-card" bindtap="goTaskA">
      <view class="task-text">
        <view class="task-title">《中医体质分类与判定》</view>
        <view class="task-desc">回答问卷，评估体质类型</view>
      </view>
      <view class="check" wx:if="{{taskACompleted}}">✓</view>
    </view>

    <view class="task-card" bindtap="goTaskB">
      <view class="task-text">
        <view class="task-title">AI 舌相</view>
        <view class="task-desc">拍照识别舌相特征</view>
      </view>
      <view class="check" wx:if="{{taskBCompleted}}">✓</view>
    </view>
  </view>

  <view class="reset-btn" bindtap="resetTest">重新测试</view>

  <view class="result-btn" wx:if="{{allCompleted}}" bindtap="goResult">
    查看结果
  </view>
</view>
