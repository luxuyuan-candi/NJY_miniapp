<!-- pages/yangsheng/yangshengshiping/videoList/index.wxml -->
<view class="page">
  <view class="nav-bar">
    <view class="nav-title">{{title}}</view>
  </view>

  <view class="content">
    <view class="section-title">精选课程</view>
    <view class="video-list">
      <view
        class="video-card"
        wx:for="{{videoList}}"
        wx:key="id"
        bindtap="goVideo"
        data-id="{{item.id}}"
      >
        <image class="cover" src="{{item.imagesrc}}" mode="aspectFill" />
        <view class="info">
          <view class="title">{{item.title}}</view>
          <view class="desc">{{item.shortdesc}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
