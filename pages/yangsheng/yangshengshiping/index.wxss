/* pages/yangsheng/index/index.wxss */
.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  width: 70%;
  height: 100%;
  background: #ffffff;
  z-index: 1000;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.sidebar.open {
  transform: translateX(0);
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
}

.item {
  padding: 32rpx;
  border-bottom: 1px solid #eee;
}

.page {
  padding: 32rpx;
}

.nav-bar {
  position: relative;
  height: 88rpx;
  background-color: #f5f5f5; /* 背景色 */
  display: flex;
  align-items: center;
}

.menu-btn {
  position: absolute;
  left: 24rpx;
  font-size: 40rpx;
  line-height: 1;
}

/* 中间标题 */
.nav-title {
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;   /* ⭐ 水平居中 */
  gap: 24rpx;                /* ⭐ 图片之间的间距 */
  margin-top: 40rpx;
}

.grid-item {
  position: relative;
  width: 320rpx;             /* ⭐ 固定宽度，保证两列 */
  height: 240rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f2f2f2;
  transition: transform 0.15s ease, opacity 0.15s ease;
}

.grid-item image {
  width: 100%;
  height: 100%;
}

.grid-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  background: rgba(0, 0, 0, 0.35);
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
}

.grid-item-hover {
  transform: scale(0.96);   /* 轻微缩小 */
  opacity: 0.85;            /* 变暗一点 */
}
