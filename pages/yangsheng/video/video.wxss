/* pages/yangsheng/video/video.wxss */
.video-page {
  background: #f7f1e6;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.video-shell {
  background: #1d140b;
  padding: 16rpx 16rpx 0;
}

.video-player {
  width: 100%;
  height: 420rpx;
  background: #000;
  border-radius: 16rpx;
}

.info {
  margin: 18rpx 20rpx 0;
  padding: 22rpx;
  background: #fff;
  border-radius: 20rpx;
  border: 1rpx solid #f1e3cc;
  box-shadow: 0 8rpx 18rpx rgba(85, 56, 18, 0.12);
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: #3f2a11;
}

.meta {
  font-size: 24rpx;
  color: #8b7a64;
  margin: 12rpx 0;
}

.dot {
  margin: 0 8rpx;
}

.desc {
  font-size: 24rpx;
  color: #6f5a3a;
  line-height: 1.7;
}
