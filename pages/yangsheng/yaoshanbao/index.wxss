/* pages/yangsheng/yaoshanbao/index.wxss */
.page {
  background: #f7f1e6;
  min-height: 100vh;
  padding-top: 88rpx;
  position: relative;
}

/* 顶部导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: #fff7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(153, 101, 38, 0.12);
  z-index: 100;
}

.menu-btn {
  position: absolute;
  left: 24rpx;
  font-size: 36rpx;
  color: #7b4f21;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #5c3b16;
  letter-spacing: 2rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(45, 30, 10, 0.45);
  z-index: 99;
}

/* 侧边栏 */
.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  width: 72%;
  height: 100%;
  background: #fffaf2;
  transform: translateX(-100%);
  transition: transform 0.3s;
  z-index: 100;
  padding-top: 88rpx;
  box-shadow: 12rpx 0 28rpx rgba(92, 58, 20, 0.18);
}

.sidebar.open {
  transform: translateX(0);
}

.sidebar-header {
  padding: 28rpx 32rpx 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #8a5a2b;
}

.sidebar .item {
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f1e1c8;
  font-size: 28rpx;
  color: #5f4525;
}

/* 内容区 */
.content {
  padding: 16rpx 20rpx 140rpx;
}

.hero {
  padding: 26rpx 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #f4d7ab, #fff2d9);
  box-shadow: 0 10rpx 22rpx rgba(168, 112, 38, 0.18);
  margin-bottom: 20rpx;
}

.hero-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #5a3a16;
}

.hero-subtitle {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #7d5a2c;
}

.goods-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 商品卡片 */
.goods-item {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 18rpx rgba(85, 56, 18, 0.12);
  border: 1rpx solid #f1e3cc;
}

.goods-img {
  width: 180rpx;
  height: 180rpx;
}

.goods-info {
  flex: 1;
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #3f2a11;
}

.goods-brief {
  font-size: 24rpx;
  color: #7b6a56;
  margin: 8rpx 0;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 28rpx;
  font-weight: 700;
  color: #c0572a;
}

.count {
  display: flex;
  align-items: center;
  background: #f7eddc;
  border-radius: 999rpx;
  padding: 4rpx 8rpx;
}

.btn {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 50%;
  color: #6b4a1f;
  background: #fff;
  margin: 0 6rpx;
}

.num {
  width: 56rpx;
  text-align: center;
  color: #5f4525;
  font-weight: 600;
}

/* 购物车按钮 */
.cart-btn {
  position: fixed;
  bottom: 28rpx;
  right: 28rpx;
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #d2872f, #b86c21);
  box-shadow: 0 16rpx 28rpx rgba(140, 88, 24, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 101;
}

.cart-icon {
  width: 56rpx;
  height: 56rpx;
}

.cart-count {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #e04b3a;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  font-weight: 700;
  border: 2rpx solid #fff;
}
