/* pages/yangsheng/aidentify/task/index.wxss */
page {
  background: #f7f1e6;
  color: #2b2a27;
}

.page {
  padding: 28rpx 24rpx 140rpx;
}

.header {
  padding: 28rpx;
  border-radius: 22rpx;
  background: linear-gradient(135deg, #f4d7ab, #fff2d9);
  box-shadow: 0 10rpx 22rpx rgba(168, 112, 38, 0.18);
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5a3a16;
}

.subtitle {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #7d5a2c;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.task-card {
  position: relative;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  border: 1rpx solid #f1e3cc;
  box-shadow: 0 8rpx 18rpx rgba(85, 56, 18, 0.12);
}

.task-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #3f2a11;
}

.task-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #7b6a56;
}

.check {
  position: absolute;
  right: 22rpx;
  top: 22rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #6aa84f;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reset-btn {
  margin-top: 28rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #e49c3c;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 22rpx rgba(140, 88, 24, 0.2);
}

.result-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #d2872f, #b86c21);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 24rpx 40rpx rgba(140, 88, 24, 0.3);
}
