<!-- pages/yangsheng/aidentify/index.wxml -->
<view class="page">
  <!-- 顶部导航栏 -->
  <view class="nav-bar">
    <view class="menu-btn" bindtap="openSidebar">☰</view>
    <view class="nav-title">体质辨识</view>
  </view>

  <!-- 遮罩层 -->
  <view class="mask" wx:if="{{showSidebar}}" bindtap="closeSidebar"></view>

  <!-- 侧边栏 -->
  <view class="sidebar {{showSidebar ? 'open' : ''}}">
    <view class="sidebar-header">养生导航</view>
    <view class="item" bindtap="goIndex">首页</view>
    <view class="item" bindtap="goPage" data-page="aidentify">体质辨识</view>
    <view class="item" bindtap="goPage" data-page="yangshengshiping">养生视频</view>
    <view class="item" bindtap="goPage" data-page="yaoshanbao">药膳包</view>
  </view>

  <view class="content">
    <view class="hero">
      <view class="hero-title">辨识体质，定制养生</view>
      <view class="hero-subtitle">问卷 + AI 舌相，双重评估更准确</view>
    </view>

    <view class="card">
      <view class="card-title">开始体质检测</view>
      <view class="card-desc">
        完成问卷与 AI 舌相分析，获得体质类型与养生建议
      </view>
      <view class="start-btn" bindtap="goNextPage">开始辨识</view>
    </view>
  </view>
</view>
